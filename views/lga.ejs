<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bincom Test Election App</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/lgaData.js"></script>
  </head>
  <body>
    <header>
        <a href="/" class="header-logo">Election Results</a>
        <a href="/" class="header-logo">Polling Units</a>
        <a href="/lga" class="header-logo">LGA summed total</a>
        <a href="/new" class="header-logo">New PU Result</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Select LGA to get the summed total</h1>
      </div>
      <div>
      <select id="select_lga" onchange="lgadata()">
            <option>Select LGA</option>
            <% items.forEach((item) => { %>
                <option value=<%= item.uniqueid %> >
                    <%= item.lga_name %>
                </option>
              <% }) %>
          </select>
      </div>
          <br/>

      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">Result_ID</span>
          <span class="id-column">PU_ID</span>
          <span class="id-column">Party</span>
          <span class="id-column">Party_Score</span>
        </div>

        <ul id="lgaResult" class="table-body">
        
        </ul>
      </div>
    </div>
  </body>
</html>